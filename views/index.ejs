<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" 
              content="width=device-width, initial-scale=1.0">
        <title>LigChatBase</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
              rel="stylesheet" 
              integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
              crossorigin="anonymous">
        <link rel="stylesheet" 
              href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://kit.fontawesome.com/a076d05399.js" 
                crossorigin="anonymous">
        </script>
    </head>
    <style>
        body{
            background-color: gray;
        }
        #layout{  
            background-color: #F4F6F7;
            padding: 40px 50px;
            height: 740px;
            max-height: 740px;
            width: 650px;
            max-width: 700px;
            border: 5px solid #BB8FCE;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 25px 25px 25px 25px;
        }
        h2{
            color: black;
            font-size: 19px; 
            font-family: Arial, Helvetica, sans-serif;
        }
        #chat{
            height: 430px;
            max-height: 4700px;
            min-height: 400px;
            max-width: 100%;
            background-color: #F4F6F7;
            overflow-y: scroll;
            color: #8E44AD;
            padding: 5px 30px; 
            font-size: 12px; 
            font-family: Arial, Helvetica, sans-serif;
            border-radius: 15px 5px 5px 25px;
        }
        #tela{
            align-items: center;
            background-color: #F4F6F7;
            padding: 0px 15px; 
            border-radius: 25px 25px 25px 25px;
        }
        #buttonEnviar{
            border: 2px solid #8E44AD;
            padding: 10px 20px; 
            border-radius: 5px;
            cursor: pointer;
            color: #F0F3F4;
            font-size: 19px; 
            font-family: Arial, Helvetica, sans-serif;
            background-color: #8E44AD;
        }
        #buttonEnviar:hover{
            border: 2px solid #2ECC71;
            background-color: #2ECC71;
            color: white;
        }
        /* CustomizaÃ§Ã£o das letras do campo de msg */
        #msg{
            color: #8E44AD;
            font-family: Arial, Helvetica, sans-serif;
        }
        /* CustomizaÃ§Ã£o das letras do campo de username  */
        #username{
            color: black;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 20px;
        }
        #inputUser{
            border-radius: 5px;
            border: 3px solid #BB8FCE;
            background-color: #8E44AD;
        }
        #inputUser:hover{
            border: 2px solid #2ECC71;
            background-color: #2ECC71;
            color: white;
        }
        #inputMsg{
            border-radius: 5px;
            border: 3px solid #BB8FCE;
            background-color: #8E44AD;
        }
        #inputMsg:hover{
            border: 2px solid #2ECC71;
            background-color: #2ECC71;
            color: white;
        }
    </style>
  
    <body>
        <div id="layout"> 
            <div id="tela">
                <div id="chat"></div>
                <br>
                <div id="inputMsg" class="d-grid gap-2">
                    <input 
                        type="text" 
                        id="msg" 
                        placeholder="Digite sua mensagem" 
                        class="form-control">
                </div><br>
                <div id="inputUser" class="d-grid gap-2">
                    <input 
                        type= "text" 
                        id= "username" 
                        placeholder= "Seu nome de usuÃ¡rio" 
                        class= "form-control">
                </div><br>
                <div class="d-grid gap-2">
                    <button 
                        id="buttonEnviar" 
                        onclick= "enviar()" 
                        class= "btn btn-primary" 
                        type= "button">
                            Enviar ðŸš€
                    </button>
                </div>
            </div>
        </div>
    </body>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.1/socket.io.js"></script>
    <script>
        var socket = io("http://localhost:3000");

        //Tratando clientes desconectados
        socket.on("disconnect",() => {
            console.log("Desconectado");
        });

        socket.on("showmsg", (data) => {
            console.log(data);
            var chat = document.getElementById("chat");
            var p  = document.createElement("p");
            p.innerHTML =  data.username + ": " + data.msg;
            chat.append(p);
        });

        function enviar(){
    
            var msgField  = document.getElementById("msg");
            var usernameField = document.getElementById("username");
            var msg = msgField.value;
            var username = usernameField.value;
            socket.emit("msg",{msg: msg, username: username});

        }
    </script>
</html>